<?xml version="1.0" encoding="utf-8"?>
<abilitygroup>

  <abilitygroupinfo>
    <abilitygrouptitle>Crossbow Proficiency</abilitygrouptitle>
    <abilitygroupid>crossbow</abilitygroupid>
    <abilitygroupfamily><martial/></abilitygroupfamily>
    <abilitygroupdescription>
      <p>
        Represents training the ability to use of the bow and arrow.  This
	includes at higher lvels the use of the long bow.
      </p>
    </abilitygroupdescription>
    <enabled/>
  </abilitygroupinfo>
  

  <ability>
    <abilitytitle>Crossbow Shoot</abilitytitle>
    <abilityid>crossbow.shoot</abilityid>
    <abilityactiontype><standard/></abilityactiontype>
    <abilitycheck dc="Targets Defence"/>
    <abilitychecktype>Std+Level</abilitychecktype>
    <abilitydmg>Weapon+Agility</abilitydmg>
    <tags><weapon/><crossbow/><ranged/></tags>
    <abilitydescription>
      <p noindent="true">
        Characters equipped with an Crossbow can shoot it during combat
	doing weapon damage.
      </p>
    </abilitydescription>
    <spline></spline>
    <abilitylevels from="0" to="4"/>
  </ability>


  <ability>
    <abilitytitle>Fast Loader</abilitytitle>
    <abilityid>crossbow.fast_loader</abilityid>
    <abilityactiontype><standard/></abilityactiontype>
    <tags><weapon/><crossbow/><ranged/></tags>
    <abilitycheck dc="9"/>
    <abilitychecktype>Speed+Level</abilitychecktype>
    <abilitydmg></abilitydmg>
    <abilitydescription>
      <p>
	The character has spent a long time practicing reloading a heavy
	crossbow.  They can check to reload their crossbow and fire in the same
	round (usually it takes a whole round to reload).  If they fail they
	spend the round reloading instead.
      </p>
    </abilitydescription>
    <spline><p x="-90" y="30"/></spline>
    <prereqabilitylevel>crossbow.shoot_2</prereqabilitylevel>
    <abilitylevels from="1" to="4"/>
  </ability>


  <ability>
    <abilitytitle>Heavy Cross Bow</abilitytitle>
    <abilityid>crossbow.heavy</abilityid>
    <abilityactiontype><standard/></abilityactiontype>
    <tags><weapon/><crossbow/><ranged/></tags>
    <abilitycheck dc="Targets Defence"/>
    <abilitychecktype>Std+Level</abilitychecktype>
    <abilitydmg>Weapon + Agility</abilitydmg>
    <abilitydescription>
      <p>
	Character has trained in the use of the heavy crossbow.  Heavy
	crossbows are slow to reload and take a full turn to reload.
      </p>
    </abilitydescription>
    <spline><p x="90" y="30"/></spline>
    <prereqabilitylevel>crossbow.shoot_2</prereqabilitylevel>
    <abilitylevels from="0" to="4"/>
  </ability>  
</abilitygroup>
