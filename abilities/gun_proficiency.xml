<?xml version="1.0" encoding="utf-8"?>
<abilitygroup>

  <abilitygroupinfo>
    <abilitygrouptitle>Gun Proficiency</abilitygrouptitle>
    <abilitygroupid>gun</abilitygroupid>
    <abilitygroupfamily>Combat</abilitygroupfamily>
    <abilitygroupdescription>
      <p>
        Represents training the ability to use of pistols and blunderbuss.
      </p>
    </abilitygroupdescription>
  </abilitygroupinfo>
  

  <ability>
    <abilitytitle>Shoot</abilitytitle>
    <abilityid>gun.shoot</abilityid>
    <abilityclass>Fast</abilityclass>
    <abilitydescription>
      <p noindent="true">
        Characters equipped with a gun can shoot with it during combat
	doing weapon damage.
      </p>
    </abilitydescription>

    <abilitylevels>
      <abilitylevel>
        <levelnumber>0</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>0</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <successes>3</successes>
        <failures>3</failures>
        <check>Std 2d8 vs opponents AC</check>
        <damage>Weapon damage</damage>
      </abilitylevel>

      <abilitylevel>
        <levelnumber>1</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>7</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <successes>3</successes>
        <failures>3</failures>
        <check>Std 2d8 + 2 vs opponents AC</check>
        <damage>Weapon damage + 2</damage>
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>14</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <check>Std 2d8 + 4 vs opponents AC</check>
        <damage>Weapon damage + 5</damage>
      </abilitylevel>      
    </abilitylevels>
  </ability>


  <ability>
    <abilitytitle>Gun Maintenance</abilitytitle>
    <abilityid>gun.maintenance</abilityid>
    <abilityclass>Non-Combat</abilityclass>
    <abilitydescription>
      <p>
	Represents the characters ability to reload and repair the gun.
      </p>
    </abilitydescription>

    <abilitylevels>
      <abilitylevel>
        <levelnumber>0</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>0</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <successes>3</successes>
        <attempts>1</attempts>
        <check>Std 2d8 vs default 4</check>
	<effect>Reload the gun during combat</effect>
      </abilitylevel>

      <abilitylevel>
        <levelnumber>1</levelnumber>
        <prereqabilitylevel>crossbow.crossbow_1</prereqabilitylevel>
        <defaultlore>0</defaultlore>
        <defaultmartial>3</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <successes>2</successes>
        <attempts>1</attempts>
        <check>Std 2d8 vs default 3</check>
	<effect>Reload the gun during combat</effect>
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>14</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <check>Std 2d8 vs default 9</check>
	<effect>Repair the gun?</effect>
      </abilitylevel>      
    </abilitylevels>
  </ability>
</abilitygroup>
