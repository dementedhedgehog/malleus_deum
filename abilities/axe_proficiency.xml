<?xml version="1.0" encoding="utf-8"?>
<abilitygroup>
  <abilitygroupinfo>
    <abilitygrouptitle>Axe Proficiency</abilitygrouptitle>
    <abilitygroupid>axe</abilitygroupid>
    <abilitygroupfamily><martial/></abilitygroupfamily>
    <abilitygroupdescription>
      <p>
        These abilities represent training in the use of axes in combat.  This
	includes the use of single handed war axes, two handed battle axes, 
	and throwing axes.
      </p>
    </abilitygroupdescription>
    <enabled/>
  </abilitygroupinfo>

  <ability>
    <abilitytitle>Axe Cleave</abilitytitle>
    <abilityid>axe.cleave</abilityid>
    <abilityactiontype><standard/></abilityactiontype>
    <tags><axe/><heavy/><weapon/><martial/></tags>
    <abilitydescription>
      <p>
	The character strikes at their opponent with great vengeance and
	furious anger.  Damage from this attack beyond the amount that
	kills the target is then applied to all other targets adjacent to the
	character.
      </p>
    </abilitydescription>    
    <spline><p x="60" y="30"/></spline>
    <abilitycheck dc="Targets Defence"/>
    <abilitychecktype>Std+Rank</abilitychecktype>
    <abilitydmg>Weapon + Strength|Endurance</abilitydmg>
    <prereqabilityrank>axe.strike_2</prereqabilityrank>
    <prereqattr><strength>13</strength></prereqattr>
    <abilityranks from="1" to="4"/>
  </ability>


  <ability>
    <abilitytitle>Axe Frenzy</abilitytitle>
    <abilityid>axe.frenzy</abilityid>
    <abilityactiontype><standard/></abilityactiontype>
    <tags><axe/><heavy/><weapon/><martial/><mettlepool/></tags>
    <abilitycheck dc="6"/>
    <abilitychecktype>Mettle+Level</abilitychecktype>
    <abilitydmg>None</abilitydmg>
    <abilitydescription>
      <p>
	When a character makes a frenzied attack with an axe, they make
	a Mettle Check.  If they pass they make two attacks that round.
	On overcharge the character goes beserk.
      </p>
    </abilitydescription>
    <prereqabilityrank>axe.strike_1</prereqabilityrank>
    <prereqattr><strength>13</strength></prereqattr>
    <spline><p x="-75" y="30"/></spline>    
    <abilityranks from="1" to="4"/>
  </ability>

  <ability>
    <abilitytitle>Axe Hook</abilitytitle>
    <abilityid>axe.hook</abilityid>
    <abilityactiontype><standard/></abilityactiontype>
    <tags><axe/><heavy/><weapon/><martial/></tags>
    <abilitycheck dc="Targets Defence"/>
    <abilitychecktype>Std+Rank</abilitychecktype>
    <abilitydmg>Weapon + Strength|Endurance, target saves vs Str or drops weapon/shield</abilitydmg>
    <abilitydescription>
      <p>
        Characters equipped with an axe can use the axe to attempt to disarm
	an opponent or remove their shield by using the axes beard as a hook.
      </p>
    </abilitydescription>
    <prereqabilityrank>axe.strike_1</prereqabilityrank>
    <spline><p x="0" y="30"/></spline>    
    <abilityranks from="1" to="4"/>
  </ability>

  <ability>
    <abilitytitle>Axe Strike</abilitytitle>
    <abilityid>axe.strike</abilityid>
    <abilityactiontype><standard/></abilityactiontype>
    <tags><axe/><heavy/><martial/><weapon/><basic/></tags>
    <abilitydescription>
      <p noindent="true">
        Characters equipped with an axe can strike with it during combat
	doing weapon damage.
      </p>
    </abilitydescription>
    <abilitycheck dc="Targets Defence"/>
    <abilitychecktype>Std+Rank</abilitychecktype>
    <abilitydmg>Weapon + Strength|Endurance</abilitydmg>
    <spline></spline>
    <abilityranks untrained="0" from="1" to="4"/>
  </ability>
</abilitygroup>
