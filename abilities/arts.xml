  <ability>
    <abilitytitle>Art History</abilitytitle>
    <abilityid>art_history</abilityid>    
    <abilityranks from="1" to="6"/>
    <abilitycheck>
      <actiontype><immediate/></actiontype>
      <critsuccess></critsuccess>
      <critfail></critfail>
      <boon></boon>
      <indifferent></indifferent>
      <bane></bane>
      <range><na/></range>
      <keywords></keywords>
      <dc>13</dc>
    </abilitycheck>
    <spline><p x="-60" y="0"/></spline>    
    <abilitydescription>
      <p>
 	This ability represents background knowledge in the arts,
 	and arts history.  This ability can be used to answer questions
 	about the provenance of a piece of art, its style, information about
	prominent artists, its likely country and period of origin, and
	to appraise its value.
      </p>
    </abilitydescription>
  </ability>

  
