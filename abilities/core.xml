<abilitygroup>
  <abilitygroupinfo>
    <abilitygrouptitle>Primary Abilities</abilitygrouptitle>
    <abilitygroupid><primary/></abilitygroupid>
    <abilitygroupfamily><general/></abilitygroupfamily>
    <abilitygroupdescription>
      <p>
	The primary abilities are five core abilities that represent the
	characters raw, innate, unlearned capabilities. <label>sec:primary_abilities</label>
      </p>      
    </abilitygroupdescription>
    <dontdrawskilltree/>
    <enabled/>
  </abilitygroupinfo>

  
  <ability>
    <abilitytitle>Strength</abilitytitle>
    <abilityid>strength</abilityid>    
    <abilityranks from="-3" to="6"/>
    <abilitycheck>
      <name>Check</name>
      <actiontype><immediate/></actiontype>
      <critsuccess></critsuccess>
      <critfail></critfail>
      <boon></boon>
      <indifferent></indifferent>
      <bane></bane>
      <range><na/></range>
      <keywords></keywords>
      <dc>GM Fiat</dc>
    </abilitycheck>

    <abilitycheck>
      <name>Save</name>
      <actiontype><immediate/></actiontype>
      <boon></boon>
      <indifferent></indifferent>
      <bane></bane>
      <range><na/></range>
      <keywords><save/></keywords>
      <dc>GM Fiat</dc>
    </abilitycheck>

    <spline><p x="90" y="0"/></spline> 
    <specializations>
      <specialization>Throw</specialization>
    </specializations>     
    <abilitydescription>
      <indexentry>Strength</indexentry>
      <indexentry>Abilities<subentry>Strength</subentry></indexentry>
      <p>Represents the characters brute physical power.  Strength checks are used to
      bend bars, open doors and to lift heavy objects.  Strength modifies melee damage and
      the characters Health.
      </p>      
    </abilitydescription>
  </ability>

  
