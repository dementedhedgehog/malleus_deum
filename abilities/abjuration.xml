        <successes>3</successes>
        <attempts>1</attempts>
        <check>Magic Pool versus DDC 10</check>
	<overcharge>DC + 8</overcharge>
	<effect>+8 temp hit points</effect>
        <prereqabilitylevel>magic_school.abjuration_1</prereqabilitylevel>	
      </abilitylevel>

      <abilitylevel>
