<?xml version="1.0" encoding="utf-8"?>
<abilitygroup>

  <abilitygroupinfo>
    <abilitygrouptitle>Dagger Proficiency</abilitygrouptitle>
    <abilitygroupid>dagger</abilitygroupid>
    <abilitygroupfamily><martial/></abilitygroupfamily>
    <abilitygroupdescription>
      <p>
        Represents training the ability to use daggers, stillettos
	rondels.
      </p>
    </abilitygroupdescription>
    <enabled/>
  </abilitygroupinfo>

  <ability>
    <abilitytitle>Dagger Riposte</abilitytitle>
    <abilityid>dagger.riposte</abilityid>
    <abilityactiontype><standard/></abilityactiontype>
    <tags><weapon/><dagger/></tags>
    <abilitydescription>
      <p>
	The character is dual wielding, holding the dagger in their off hand.
	They attack with both weapons.  Attack with the dagger, if successful
	they can take a	non-reaction action with their primary weapon.
      </p>
    </abilitydescription>
    <spline><p x="75" y="30"/></spline>
    <prereqabilitylevel>dagger.dagger_2</prereqabilitylevel>
    <prereqattr><speed>13</speed><agility>13</agility></prereqattr>
    <abilitycheck dc="Targets Defence"/>
    <abilitychecktype>Std+Level</abilitychecktype>
    <abilitydmg>Weapon + Speed|Agility</abilitydmg>
    <abilitylevels from="1" to="5"/>
  </ability>
  

  <ability>
    <abilitytitle>Dagger Strike</abilitytitle>
    <abilityid>dagger.dagger</abilityid>
    <abilityactiontype><standard/></abilityactiontype>
    <tags><weapon/><dagger/></tags>
    <abilitydescription>
      <p noindent="true">
        Characters equipped with a dagger can strike with it during combat
	doing weapon damage.
      </p>
    </abilitydescription>
    <spline></spline>
    <abilitycheck dc="Targets Defence"/>
    <abilitychecktype>Std+Level</abilitychecktype>
    <abilitydmg>Weapon + Speed|Agility</abilitydmg>
    <abilitylevels from="0" to="5"/>
  </ability>


  <ability>
    <abilitytitle>Throw Dagger</abilitytitle>
    <abilityid>dagger.throw</abilityid>
    <abilityactiontype><standard/></abilityactiontype>
    <tags><weapon/><dagger/></tags> 
    <abilitydescription>
      <p>
        Characters equipped with a dagger can throw the
	dagger at an opponent.
      </p>
    </abilitydescription>
    <spline><p x="-75" y="30"/></spline> 
    <prereqabilitylevel>dagger.dagger_1</prereqabilitylevel>
    <abilitycheck dc="Targets Defence"/>
    <abilitychecktype>Std+Level</abilitychecktype>
    <abilitydmg>Weapon</abilitydmg>
    <abilitylevels from="0" to="5"/>
  </ability>  
</abilitygroup>
