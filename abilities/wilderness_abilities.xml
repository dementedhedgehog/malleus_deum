  <ability>
    <abilitytitle>Stealth</abilitytitle>
    <abilityid>wilderness.stealth</abilityid>
    <abilityclass>Non-Combat</abilityclass>
    <abilitydescription>
      <p>
	Stealth ia the skill of moving silently, avoiding detection, while
	not leaving a trace of the characters passage in the wilderness.
	This ability is used to avoiding being tracked.
      </p>
    </abilitydescription>
    <abilitylevels>
      <abilitylevel>
        <levelnumber>0</levelnumber>
        <prereqabilitylevel></prereqabilitylevel>
        <defaultlore>0</defaultlore>
        <defaultmartial>0</defaultmartial>
