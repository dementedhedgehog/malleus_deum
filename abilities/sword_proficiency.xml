<?xml version="1.0" encoding="utf-8"?>
<abilitygroup>

  <abilitygroupinfo>
    <abilitygrouptitle>Sword Proficiency</abilitygrouptitle>
    <abilitygroupid>sword</abilitygroupid>
    <abilitygroupfamily>Combat</abilitygroupfamily>
    <abilitygroupdescription>
      <p>
        Represents training the ability to use swords in combat.  This includes
	the use of two handed swords.
      </p>      
    </abilitygroupdescription>
  </abilitygroupinfo>
  

  <ability>
    <abilitytitle>Sword Strike</abilitytitle>
    <abilityid>sword.strike</abilityid>
    <abilityclass>Melee</abilityclass>
    <abilityattrmodifiers><attr>Strength</attr><attr>Speed</attr></abilityattrmodifiers>
    <abilitydescription>
      <p noindent="true">
        Characters equipped with a Sword can strike with it during combat doing
	weapon damage.
      </p>
    </abilitydescription>

    <abilitylevels>
      <abilitylevel>
	<!-- level 0 is innate! -->
        <levelnumber>0</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>0</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <successes>3</successes>
        <attempts>3</attempts>
        <check>Std 2d8 vs opponents AC</check>
        <damage>Weapon damage</damage>
      </abilitylevel>

      <abilitylevel>
        <levelnumber>1</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>7</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <successes>3</successes>
        <attempts>3</attempts>
        <check>Std 2d8 + 2 vs opponents AC</check>
        <damage>Weapon damage + Str modifier</damage>
	<prereqabilitylevel>school.military_1</prereqabilitylevel>
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>8</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <successes>3</successes>
        <attempts>3</attempts>
        <check>Std 2d8 + 4 vs opponents AC</check>
        <damage>Weapon damage + 2 + Str modifier</damage>
      </abilitylevel>      

      <abilitylevel>
        <levelnumber>3</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>8</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <check>Std 2d8 + 4 vs opponents AC</check>
        <damage>Weapon damage + 3 + Str modifier</damage>
      </abilitylevel>      
    </abilitylevels>
  </ability>


  <ability>
    <abilitytitle>Mighty Blow</abilitytitle>
    <abilityid>sword.mighty_blow</abilityid>
    <abilityclass>Melee</abilityclass>
    <abilityattrmodifiers><attr>Strength</attr><attr>Speed</attr></abilityattrmodifiers>
    <abilitydescription>
      <p noindent="true">
        Characters equipped with a Sword can strike with it during combat doing
	weapon damage.
      </p>

      <p>
	When attacking a Mook the usual benefit is that the mook is insta-killed.
      </p>
    </abilitydescription>

    <abilitylevels>
      <abilitylevel>
        <levelnumber>1</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>7</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <successes>3</successes>
        <attempts>3</attempts>
        <check>Std 2d8 + 4 vs opponents AC</check>
        <damage>Weapon damage + 3 + Str modifier</damage>
	<prereqabilitylevel>sword.strike_3</prereqabilitylevel>
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>8</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <successes>3</successes>
        <attempts>3</attempts>
        <check>Std 2d8 + 4 vs opponents AC</check>
        <damage>Weapon damage + 4 + Str modifier</damage>
      </abilitylevel>      

      <abilitylevel>
        <levelnumber>3</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>8</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <check>Std 2d8 + 4 vs opponents AC</check>
        <damage>Weapon damage + 5 + Str modifier</damage>
      </abilitylevel>      
    </abilitylevels>
  </ability>


  <ability>
    <abilitytitle>Sword Feint</abilitytitle>
    <abilityid>sword.feint</abilityid>
    <abilityclass>Melee</abilityclass>
    <abilityattrmodifiers><attr>Speed</attr></abilityattrmodifiers>
    <abilitydescription>
      <p>
	The character makes an opposed agility check when an opponent attacks
	them with a melee weapon. If they succeed they swap initiative order
	with their opponent.
      </p>
    </abilitydescription>
    <abilitylevels>
      <abilitylevel>
        <levelnumber>1</levelnumber>
        <prereqabilitylevel>sword.strike_2</prereqabilitylevel>
        <defaultlore>0</defaultlore>
        <defaultmartial>7</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <successes>3</successes>
        <attempts>1</attempts>
	<check>Opposed Agility Check</check>
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>5</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
	<check>Opposed Agility Check +2</check>
      </abilitylevel>      
    </abilitylevels>
  </ability>


  <ability>
    <abilitytitle>Sword Parry</abilitytitle>
    <abilityid>sword.parry</abilityid>
    <abilityclass>Reaction</abilityclass>
    <abilityattrmodifiers><attr>Strength</attr><attr>Speed</attr></abilityattrmodifiers>
    <abilitydescription>
      <p>
        The player parrys a blow using a weapon.
      </p>
    </abilitydescription>
    <abilitylevels>
      <abilitylevel>
        <levelnumber>1</levelnumber>
        <prereqabilitylevel></prereqabilitylevel>
        <defaultlore>0</defaultlore>
        <defaultmartial>8</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <successes>3</successes>
        <attempts>1</attempts>
	<check>Opposed Speed Check</check>
        <prereqabilitylevel>sword.strike_1</prereqabilitylevel>	
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>5</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
	<check>Opposed Speed Check + 2</check>
        <!-- <successes>3</successes>
             <attempts>3</attempts> -->
      </abilitylevel>      
    </abilitylevels>
  </ability>


  <ability>
    <abilitytitle>Sword Disarm</abilitytitle>
    <abilityid>sword.disarm</abilityid>
    <abilityclass>Melee</abilityclass>
    <abilityattrmodifiers><attr>Speed</attr><attr>Agility</attr></abilityattrmodifiers>
    <abilitydescription>
      <p>
	The character attempts to disarm their opponent.
      </p>
    </abilitydescription>
    <abilitylevels>
      <abilitylevel>
        <levelnumber>1</levelnumber>
        <prereqabilitylevel></prereqabilitylevel>
        <defaultlore>0</defaultlore>
        <defaultmartial>5</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
        <successes>2</successes>
        <attempts>1</attempts>
	<check>Opposed Speed Check at -3</check>
	<effect>The opponent drops their weapon.</effect>
        <prereqabilitylevel>sword.strike_1</prereqabilitylevel>	
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
        <defaultlore>0</defaultlore>
        <defaultmartial>5</defaultmartial>
        <defaultgeneral>0</defaultgeneral>
	<check>Opposed Speed Check -1</check>
	<effect>The opponent drops their weapon.</effect>
      </abilitylevel>      
    </abilitylevels>
  </ability>
  
</abilitygroup>
