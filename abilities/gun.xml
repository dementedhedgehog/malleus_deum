<?xml version="1.0" encoding="utf-8"?>
<abilitygroup>

  <abilitygroupinfo>
    <abilitygrouptitle>Gun Proficiency</abilitygrouptitle>
    <abilitygroupid>gun</abilitygroupid>
    <abilitygroupfamily><martial/></abilitygroupfamily>
    <abilitygroupdescription>
      <p>
        Represents training the ability to use of pistols and blunderbuss.
      </p>
    </abilitygroupdescription>
    <enabled/>
  </abilitygroupinfo>
  

  <ability>
    <abilitytitle>Gun Maintenance</abilitytitle>
    <abilityid>gun.maintenance</abilityid>
    <abilityactiontype><non-combat/></abilityactiontype>
    <tags><weapon/><gun/></tags>
    <abilitydescription>
      <p>
	Represents the characters ability to reload and repair the gun.
	The character needs to make this check to reload the gun during
	combat.
      </p>

      <p>
	At level 3 and above the character can make repairs to a gun
	out of combat on a successful check (presumably addressing damage
	caused by misfires).
      </p>      
    </abilitydescription>
    <spline><p x="0" y="30"/></spline>
    <prereqabilitylevel>gun_0</prereqabilitylevel>
    <abilitycheck dc="12"/>
    <abilitychecktype>Std+Level</abilitychecktype>
    <abilitydmg>Weapon</abilitydmg>
    <abilitylevels from="1" to="3"/>
  </ability>
  
  <ability>
    <abilitytitle>Sharp Shooter</abilitytitle>
    <abilityid>gun.sharp_shooter</abilityid>
    <abilityactiontype><standard/></abilityactiontype>
    <tags><weapon/><gun/></tags>
    <abilitydescription>
      <p>
	The character has spent many hours working on improving the accuracy of
	their shots.  Players can choose to call a shot which gives them a large
	bonus to hit, but takes an extra turn to aim.
      </p>
    </abilitydescription>
    <spline><p x="60" y="30"/></spline>
    <abilitycheck dc="Targets Defence"/>
    <abilitychecktype>Std+Level</abilitychecktype>
    <abilitydmg>Weapon+Level+Agility</abilitydmg>    
    <prereqabilitylevel>gun_2</prereqabilitylevel>
    <abilitylevels from="1" to="5"/>
  </ability>
  
  <ability>
    <abilitytitle>Shoot</abilitytitle>
    <abilityid>gun</abilityid>
    <abilityactiontype><standard/></abilityactiontype>
    <tags><weapon/><gun/><inaccurate/></tags>
    <abilitydescription>
      <p noindent="true">
        Characters equipped with a gun can shoot with it during combat
	doing weapon damage.  Any bane results in a gun jam.  A critical
	fail results in a small explosion (firer takes 1 damage).  A boon
	results in double damage.
      </p>
    </abilitydescription>
    <spline></spline>
    <abilitycheck dc="Targets Defence"/>
    <abilitychecktype>Std</abilitychecktype>
    <abilitydmg>Weapon+Level</abilitydmg>
    <abilitylevels from="0" to="3"/>
  </ability>
</abilitygroup>
