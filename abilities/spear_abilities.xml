<?xml version="1.0" encoding="utf-8"?>
<abilitygroup>
  <abilitygroupinfo>
    <abilitygrouptitle>Spear Use</abilitygrouptitle>
    <abilitygroupid>aspears</abilitygroupid>
    <abilitygroupfamily>Combat</abilitygroupfamily>
    <abilitygroupdescription>
      <p>
        These skills represent training in the use of spears, 
	halberds, bill hooks, glaives and other pole-arms in combat.
      </p>
    </abilitygroupdescription>
  </abilitygroupinfo>


  <ability>
    <abilitytitle>Spear Strike</abilitytitle>
    <abilityid>spear.strike</abilityid>
    <abilityclass>Fight-Reach</abilityclass>
    <keywords><weapon/><spear/></keywords>
    <abilityattrmodifiers><attr>Strength</attr><attr>Speed</attr></abilityattrmodifiers>
    <abilitydescription>
      <p noindent="true">
        Characters equipped with a spear or polearm can strike with
	it during combat doing weapon damage.
      </p>
    </abilitydescription>

    <abilitylevels>
      <abilitylevel>
        <levelnumber>0</levelnumber>
        <successes>3</successes>
        <attempts>3</attempts>
        <check>Std 2d8 vs opponents AC</check>
        <damage>Weapon damage</damage>
      </abilitylevel>

      <abilitylevel>
        <levelnumber>1</levelnumber>
        <successes>3</successes>
        <attempts>3</attempts>
        <check>Std 2d8 + 2 vs opponents AC</check>
        <damage>Weapon damage + Str modifier</damage>
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
        <check>Std 2d8 + 4 vs opponents AC</check>
        <damage>Weapon damage + 2 + Str modifier</damage>
      </abilitylevel>      
    </abilitylevels>
  </ability>




  <ability>
    <abilitytitle>Polearm - Hook</abilitytitle>
    <abilityid>spear.hook</abilityid>
    <abilityclass>Fight-Reach</abilityclass>
    <keywords><weapon/><spear/></keywords>
    <abilityattrmodifiers><attr>Speed</attr><attr>Agility</attr></abilityattrmodifiers>
    <abilitydescription>
      <p>
        Characters equipped with a polearm, but <bold>not a spear</bold>, can
	use the hooked edge of this weapon to attempt to disarm an opponent
	or remove their shield.
      </p>
    </abilitydescription>

    <abilitylevels>
      <abilitylevel>
        <levelnumber>1</levelnumber>
        <prereqabilitylevel>spear.strike_1</prereqabilitylevel>
        <successes>2</successes>
        <attempts>3</attempts>
        <failures>1</failures>
        <check>Std 2d8 vs opponents AC</check>
        <damage>Weapon damage and opponent drops weapon/shield</damage>
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
        <check>Std 2d8 + 2 vs opponents AC</check>
        <damage>Weapon damage + Str modifier and opponent drops weapon/shield</damage>
      </abilitylevel>      
    </abilitylevels>
  </ability>


  <ability>
    <abilitytitle>Spear - Brace for Charge</abilitytitle>
    <abilityid>spear.brace</abilityid>
    <abilityclass>Fight-Reach</abilityclass>
    <keywords><weapon/><spear/></keywords>
    <abilityattrmodifiers><attr>Strength</attr><attr>Willpower</attr></abilityattrmodifiers>
    <abilitydescription>
      <p>
        Characters equipped with a spear or polearm can brace against
	a charge striking first and doing extra damage.
      </p>
    </abilitydescription>

    <abilitylevels>
      <abilitylevel>
        <levelnumber>1</levelnumber>
        <prereqabilitylevel>spear.strike_1</prereqabilitylevel>
        <successes>2</successes>
        <attempts>3</attempts>
        <failures>1</failures>
        <check>Std 2d8 vs opponents AC</check>
        <damage>Double weapon damage, opponent must be charging.</damage>
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
        <check>Std 2d8 vs opponents AC</check>
        <damage>Double weapon damage + Str modifier, opponent must be charging.</damage>
      </abilitylevel>      
    </abilitylevels>
  </ability>


  <ability>
    <abilitytitle>Spear - Circle of Death</abilitytitle>
    <abilityid>spear.circle_of_death</abilityid>
    <abilityclass>Fight-Reach</abilityclass>
    <keywords><weapon/><spear/></keywords>
    <abilityattrmodifiers><attr>Strength</attr><attr>Speed</attr></abilityattrmodifiers>
    <abilitydescription>
      <p>
	The character swings their weapon in large arcs keeping foes at bay.
	Opponents must make a morale check to attack and the character may
	roll to hit the first opponent who tries to do so in the round as a
	reaction.  If successful the opponent cannot close to attack.
      </p>

      <p>
	Note that this ability requires a reasonable amount of space to swing the
	weapon, and it only works when the opponents are within a 180Â° arc.  
      </p>
    </abilitydescription>

    <abilitylevels>

      <abilitylevel>
        <levelnumber>1</levelnumber>
        <prereqabilitylevel>spear.strike_1</prereqabilitylevel>
        <successes>2</successes>
        <attempts>3</attempts>
        <failures>1</failures>
        <check>Std 2d8 vs opponents AC</check>
        <damage>Each opponent must make a Resolve Check vs DDC 10 to attack the first time,
	reaction counter-attack</damage>
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
        <check>Std 2d8 vs opponents AC</check>
        <damage>Each opponent must make a Resolve Check vs DDC 10 to attack the first time,
	reaction counter-attack</damage>
      </abilitylevel>      
    </abilitylevels>
  </ability>


  <ability>
    <abilitytitle>Spear Parry</abilitytitle>
    <abilityid>spear.parry</abilityid>
    <abilityclass>Reaction</abilityclass>
    <keywords><weapon/><spear/></keywords>
    <abilityattrmodifiers><attr>Strength</attr><attr>Speed</attr></abilityattrmodifiers>
    <abilitydescription>
      <p>
        The player parrys a blow using their weapon.
      </p>
    </abilitydescription>
    <abilitylevels>
      <abilitylevel>
        <levelnumber>1</levelnumber>
        <prereqabilitylevel>spear.strike_1</prereqabilitylevel>	
        <successes>3</successes>
        <attempts>1</attempts>
	<check>Opposed Speed Check</check>
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
	<check>Opposed Speed Check + 2</check>
      </abilitylevel>      
    </abilitylevels>
  </ability>  
</abilitygroup>
