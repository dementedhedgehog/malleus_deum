	<tablerow> <td>55-58</td><td>Dog or Hound</td></tablerow>
	
	<tablerow> <td>61-63</td><td>House Cat</td></tablerow>
	<tablerow> <td>64-65</td><td>Lynx</td></tablerow>
	<tablerow> <td>66-68</td><td>Hawk</td></tablerow>
	
	<tablerow> <td>71-72</td><td>Otter or Badger</td></tablerow>
	<tablerow> <td>73-74</td><td>Wolverine</td></tablerow>
	<tablerow> <td>75-76</td><td>Adder</td></tablerow>
	<tablerow> <td>77-78</td><td>Moose or Aurochs</td></tablerow>
	
	<tablerow> <td>81-83</td><td>Wolf</td></tablerow>
	<tablerow> <td>84-85</td><td>Lion, Snow Leopard, or Panther</td></tablerow>
	<tablerow> <td>86</td><td>Bear Black, Brown or Polar</td></tablerow>
