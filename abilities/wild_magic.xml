<abilitygroup>
  <abilitygroupinfo>
    <abilitygrouptitle>Wild Magic</abilitygrouptitle>
    <abilitygroupid><wild-magic/></abilitygroupid>
    <abilitygroupfamily><magic/></abilitygroupfamily>
    <abilitygroupdescription>
      <p>
	Wild Magic magic involves harnessing the residual life magic in a region,
	drawing energy for casting from the characters environment.
      </p>
    </abilitygroupdescription>
    <enabled/>
  </abilitygroupinfo>

  
  <ability>
    <abilitytitle>Call of the Wild</abilitytitle>
    <abilityid>call_of_the_wild</abilityid>    
    <abilityranks from="1" to="4"/>
    <abilitycheck>
      <defaults>pool_cost_1</defaults>
      <actiontype><minor/></actiontype>
      <critsuccess></critsuccess>
      <critfail></critfail>
      <!-- <boon></boon> -->
      <!-- <indifferent>1</indifferent> -->
      <!-- <bane></bane> -->
      <range><na/></range>
      <!-- <keywords><magicpool/></keywords> -->
      <dc>11</dc>
    </abilitycheck>
    <prereqabilityrank>vermin_swarm_2</prereqabilityrank>
    <spline><p x="0" y="30"/></spline>
    <abilitydescription>
      <p>
	The caster calls to the local animals for help.
      </p>

      <table>
	<tablecategory>Standard</tablecategory>
	<tablespec><fixed>0.3</fixed><fixed>0.6</fixed></tablespec>
	<tabletitle>Call of the Wild Overcharge Table</tabletitle>
	<tablelabel>fig:call-of-the-wild-overcharge</tablelabel>	  

	<tableheaderrow>
	  <td>Roll d66</td>
	  <td>Overcharge Effect</td>
	</tableheaderrow>

	<tablerow>
