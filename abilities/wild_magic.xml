	</tablerow>

	<tablerow>
	  <td>66</td>
	  <td>Weirdness ensues.. Reroll on the Overcharge Effects Table..</td>
	</tablerow>
      </table>      
    </abilitydescription>
  </ability>  
  


  <ability>
    <abilitytitle>Howl of the Hunt</abilitytitle>
    <abilityid>howl_of_the_hunt</abilityid>
    <abilityranks from="1" to="4"/>
    <abilitycheck>
      <defaults>pool_cost_1</defaults>
      <actiontype><minor/></actiontype>
      <critsuccess></critsuccess>
      <critfail></critfail>
      <!-- <boon></boon> -->
