  <ability>
    <abilitytitle>Hyperosmia</abilitytitle>
    <abilityid>hyperosmia</abilityid>    
    <abilityranks from="1" to="4"/>
    <abilitycheck>
      <defaults>pool_cost_1</defaults>
      <actiontype><minor/></actiontype>
      <critsuccess></critsuccess>
      <critfail></critfail>
      <!-- <boon></boon> -->
      <!-- <indifferent>1</indifferent> -->
      <!-- <bane></bane> -->
      <range><na/></range>
      <keywords><magicpool/></keywords>
      <dc>7</dc>
    </abilitycheck>
    <prereqabilityrank>wild-magic_1</prereqabilityrank>
    <spline><p x="0" y="60"/></spline>
    <abilitydescription>
      <p>
	The character gains a very enhanced sense of smell, temporarily.
	This spell gives them advantages to fighting when they cannot see
	(+2 to hit, more against strongly smelling opponents), +2 tracking,
	saves against illusions, +4 to Ambush roles, and +2 to Interogate
	and Perceive checks.  The spell lasts half an hour.
      </p>
    </abilitydescription>
