    <abilitycheck>
      <defaults>elemental_defaults</defaults>
      <defaults>pool_cost_1</defaults>
      <actiontype><noncombat/></actiontype>
      <critsuccess></critsuccess>
      <critfail></critfail>
      <!-- <boon></boon> -->
