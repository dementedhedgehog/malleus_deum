<?xml version="1.0" encoding="utf-8"?>
<abilitygroup>
  <abilitygroupinfo>
    <abilitygrouptitle>Rune Magic</abilitygrouptitle>
    <abilitygroupid><rune/></abilitygroupid>
    <abilitygroupfamily><magic/></abilitygroupfamily>
    <abilitygroupdescription>
      <p>
	Rune magic is a type of earth elemental based magic.
      </p>
    </abilitygroupdescription>
    <enabled/>
  </abilitygroupinfo>


  <ability>
    <abilitytitle>Bladesharp</abilitytitle>
    <abilityid>bladesharp</abilityid>    
    <abilityranks from="1" to="2"/>
    <abilitycheck>
      <defaults>rune_magic</defaults>
      <name>Cast</name>
      <actiontype><minor/></actiontype>
      <!-- <critsuccess></critsuccess> -->
      <!-- <critfail></critfail> -->
      <!-- <boon></boon> -->
      <!-- <bane></bane> -->
      <range><touch/></range>
      <!-- <keywords><magicpool/></keywords> -->
      <!-- <indifferent>1</indifferent> -->
      <dc>7</dc>
      <effect>+Rank dmg for one edged weapon for the next 5 minutes.</effect>
    </abilitycheck>
    <prereqabilityrank>runecraft_1</prereqabilityrank>	
    <spline><p x="-30" y="30"/></spline>
    <abilitydescription>
      <p>
	An invocation that sharpens a blade.
      </p>
    </abilitydescription>    
  </ability>


  <ability>
    <abilitytitle>Hold Door</abilitytitle>
    <abilityid>hold_portal</abilityid>
    <abilityranks from="1" to="4"/>
    <abilitycheck>
      <defaults>rune_magic</defaults>
      <name>Cast</name>
      <actiontype><reaction/></actiontype>
      <!-- <critsuccess></critsuccess> -->
      <!-- <critfail></critfail> -->
      <!-- <boon></boon> -->
      <!-- <bane></bane> -->
      <range><touch/></range>
      <!-- <keywords><magicpool/></keywords> -->
      <!-- <indifferent>1</indifferent> -->
      <dc>11</dc>
    </abilitycheck>
    <prereqabilityrank>runecraft_1</prereqabilityrank>	
    <spline><p x="60" y="30"/></spline>
    <abilitydescription>
      <p>
	The character can carve or mark with chalk or paint
	a sign upon a door.  That door is warded shut until
	the following sunrise.  The door gains a magical protective
	barrier with 10 hit points for each rank of the spell cast.
      </p>
    </abilitydescription>    
  </ability>
  

  <ability>
    <abilitytitle>Hex Hammer</abilitytitle>
    <abilityid>hex_hammer</abilityid>
    <abilityranks from="1" to="3"/>
    <abilitycheck>
      <defaults>rune_magic</defaults>
      <name>Cast</name>
      <actiontype><standard/></actiontype>
      <!-- <critsuccess></critsuccess> -->
      <!-- <critfail></critfail> -->
      <!-- <boon></boon> -->
      <!-- <bane></bane> -->
      <range><touch/></range>
      <!-- <keywords><magicpool/></keywords> -->
      <!-- <indifferent>1</indifferent> -->
      <dc>11</dc>
    </abilitycheck>
    <prereqabilityrank>runecraft_1</prereqabilityrank>	
    <spline><p x="60" y="30"/></spline>
    <abilitydescription>
      <p>
	The character traces a rune of power upon the
	hammer while charging it with magical energies.  For 
	the rest of that combat it does an additional +d8 damage
	on melee hits and counts as a magic weapon.
      </p>
    </abilitydescription>    
  </ability>

  
  <ability>
    <abilitytitle>Runecraft</abilitytitle>
    <abilityid>runecraft</abilityid>    
    <abilityranks from="1" to="4"/>
    <abilitycheck>
      <defaults>lore_defaults</defaults>
      <name>Check</name>
    </abilitycheck>
    <spline></spline>
    <abilitydescription>
      <p noindent="true">
	Rune magic is a very specific form of elemental ritual magic
	used mainly by dwarves and shamen.
      </p>
    </abilitydescription>    
  </ability>

  
  <ability>
    <abilitytitle>Sign of Idreshein</abilitytitle>
    <abilityid>sign_of_idreshein</abilityid>    
    <abilityranks from="1" to="4"/>
    <abilitycheck>
      <defaults>rune_magic</defaults>
      <name>Cast</name>
      <actiontype><standard/></actiontype>
      <!-- <critsuccess></critsuccess> -->
      <!-- <critfail></critfail> -->
      <!-- <boon></boon> -->
      <!-- <bane></bane> -->
      <range><touch/></range>
      <!-- <keywords><magicpool/></keywords> -->
      <!-- <indifferent>1</indifferent> -->
      <dc>11</dc>
      <dmg>d6x(Rank+4)</dmg>
    </abilitycheck>
    <prereqabilityrank>runecraft_1</prereqabilityrank>	
    <spline><p x="-30" y="30"/></spline>
    <abilitydescription>
      <p>
	The Sign of Idreshein is a sigil that stores energy
	that can be released in a fiery explosion when something
	touches the sign or by an act of will on the behalf of
	the caster.
      </p>
    </abilitydescription>    
  </ability>
</abilitygroup>
