        <levelnumber>1</levelnumber>
        <successes>3</successes>
        <attempts>1</attempts>
        <check>Std Check + 1 vs DDC 12</check>	
      </abilitylevel>
      
      <abilitylevel>
        <levelnumber>2</levelnumber>
        <check>Std Check + 2 vs DDC 12</check>	
      </abilitylevel>      
    </abilitylevels>
  </ability>
  

