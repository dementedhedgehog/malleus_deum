    	</tablerow>

    	<tablerow>
    	  <td>3-4</td>
    	  <td>Two of Ignis I or Aegis I or Alarum I</td>
    	</tablerow>

    	<tablerow>
    	  <td>5-6</td>
    	  <td>Wither I, and Ignis I or Aegis I</td>
    	</tablerow>

    	<tablerow>
    	  <td>7-8</td>
    	  <td>Ignis I and Scry I</td>
    	</tablerow>

    	<tablerow>
    	  <td>9-10</td>
    	  <td>Eldritch Push I and Aegis I</td>
    	</tablerow>

    	<tablerow>
    	  <td>11-12</td>
    	  <td>Choose one of the above</td>
    	</tablerow>
	
    	<tablelabel>table:{{ doc_name }}-study-i</tablelabel>
      </table>

      
      
