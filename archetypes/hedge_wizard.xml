    	<tablecategory>Standard</tablecategory>
    	<tablespec>
    	  <fixed>0.18</fixed>
    	  <fixed>0.71</fixed>
    	</tablespec>
    	<tabletitle>Study-2</tabletitle>

    	<tableheaderrow>
    	  <td>Roll 1D12</td>
