    	<tablecategory>Standard</tablecategory>
    	<tablespec>
    	  <fixed>0.18</fixed>
    	  <fixed>0.71</fixed>
    	</tablespec>
    	<tabletitle>Study </tabletitle>

    	<tableheaderrow>
    	  <td>Roll 1D12</td>
    	  <td>Study</td>
    	</tableheaderrow>
	
    	<tablerow>
    	  <td>1-2</td>
    	  <td>✱abjuration.circle_of_protection_1, ✱abjuration.banish_1 or ✱conjuration.wither_1</td>
    	</tablerow>

    	<tablerow>
    	  <td>3-4</td>
    	  <td>Circle of Protection I, Eldritch Shield I or Ignis I and Aegis I</td>
    	</tablerow>

    	<tablerow>
    	  <td>5-6</td>
    	  <td>Circle of Protection I, Lesser Portal I or Summon I</td>
    	</tablerow>

    	<tablerow>
    	  <td>7-8</td>
    	  <td>Lesser Portal I, Eldritch Shield I or Bind I </td>
    	</tablerow>

    	<tablerow>
    	  <td>9-10</td>
    	  <td>Flesh Ward I, Phantasmal Leach I or Cloak of Shadows</td>
    	</tablerow>

    	<tablerow>
    	  <td>11-12</td>
    	  <td>Choose one of the above</td>
    	</tablerow>
	
    	<tablelabel>table:{{ doc_name }}-study-i</tablelabel>
      </table>

