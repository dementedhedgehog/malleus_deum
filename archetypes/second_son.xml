      <branch>
	<branchtitle>Development</branchtitle>	
	  <branchdescription>
	    <p>
	      At level 2 Second Sons get the following advances.
	    </p>

	    <figure>
	      <img id="swain_black_coat" scale="0.60"/>
	    </figure>	    
	  </branchdescription>	    
	  <path chance="">
	    <pathtitle></pathtitle>
	    <choice>	      
	      +1 Stamina,	      	      
	      
	    </choice>
	    <choice>+1 Agility or +1 Speed,</choice>
	    <choice>
	      ✱sword.daring_thrust_1 and ✱sword.feint_1, or ✱sword.disarm_1 and ✱sword.mighty_blow_1
	    </choice>	      	    
	    <choice>1x new Martial abilities at level 1</choice>
	    <choice>2x Martial Promotions up to level 3</choice>
	    <choice>1x new Physical ability at level 1</choice>
	    <choice>2x Physical Promotions up to level 3</choice>
	    <choice>1x new Lore ability at level 1</choice>
	    <choice>1x Lore promotion up to rank 3</choice>
	  </path>
      </branch>      
